


@{
    ViewData["Title"] = "Patient Records";
     Layout = "NurseLayout";
}




<!DocType html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Today's Patients</title>

    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.1.4/b-3.1.1/fc-5.0.1/sc-2.4.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.css">

    
    
    <script src="~/js/script.js"></script>
    
</head>
@model IEnumerable<Surgeon__Day_Hospital_.DapperLibrary.ViewModels.BookedPatVM>
<body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/v/bs5/jq-3.7.0/dt-2.1.4/b-3.1.1/fc-5.0.1/sc-2.4.3/sb-1.8.0/sp-2.3.2/sl-2.0.5/datatables.min.js"></script>
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">
            @TempData["error"]
        </div>
    }
    <table id="example" class="table table-striped" style="width:100%">
        <thead>
            <tr>
                <th>Patient Name</th>
                <th>Surgeon</th>
                <th>Patient ID</th>  
                <th>Theater</th>  
                <th>Session</th>  
                <th>Activity</th>

            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach (var item in Model)
                {
                    <tr>

                        <td>@item.PatName</td>
                        <td>@item.SurgName</td>
                        <td>@item.IdNo</td>
                        <td>@item.Theater</td>
                        <td>@item.Session</td>
                        <td><a class="btn btn-success" href="@Url.Action("AdmitPatient", "Nurse", new {id = item.id})">Admit</a></td>
                        
                    </tr>
                }
            }
            
        </tbody>
    </table>
</body>
</html>
    








