
@{
    ViewData["Title"] = "Vitals";
    Layout = "NurseLayout";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Table Example</title>
    <style>
        table {
            width: 100%;
            border-collapse: collapse;
        }

        

        th, td {
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }
    </style>
</head>
<body>
    <h2>Vitals Table</h2>
    <table>
        <thead>
            <tr>
                <th></th>
                <th>Value</th>
                <th>Time Captured</th>
                <th>Rating</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Weight</td>
                <td>Example 1</td>
                <td>08:00 AM</td>
                <td>4.5</td>
            </tr>
            <tr>
                <td>Height</td>
                <td>Example 2</td>
                <td>08:15 AM</td>
                <td>4.0</td>
            </tr>
            <tr>
                <td>Temp.</td>
                <td>Example 3</td>
                <td>08:30 AM</td>
                <td>3.8</td>
            </tr>
            <tr>
                <td>DIASTOLIC BP</td>
                <td>Example 4</td>
                <td>08:45 AM</td>
                <td>4.2</td>
            </tr>
            <tr>
                <td>SYSTOLIC BP</td>
                <td>Example 5</td>
                <td>09:00 AM</td>
                <td>4.7</td>
            </tr>
            <tr>
                <td>Pulse(per Minute)</td>
                <td>Example 6</td>
                <td>09:15 AM</td>
                <td>4.1</td>
            </tr>
            <tr>
                <td>Resp.(Per Minute)</td>
                <td>Example 7</td>
                <td>09:30 AM</td>
                <td>4.3</td>
            </tr>
            <tr>
                <td>s02</td>
                <td>Example 8</td>
                <td>09:45 AM</td>
                <td>3.9</td>
            </tr>
            <tr>
                <td>BG</td>
                <td>Example 9</td>
                <td>10:00 AM</td>
                <td>4.6</td>
            </tr>
        </tbody>
    </table>
    <button class="submit-button">Submit</button>
</body>

</html>



